%{
	#include <stdio.h>
	#include "y.tab.h"
	#include <stdlib.h>

	int number;

%}

%%

[0-9]+   { yylval.integer = atoi(yytext); return NUM;}
"read"    { return READ;}
"int"     {return INT;}
"boolean" {return BOOL;}
"write"    {return WRITE;}
"if"		{return IF;}
"then"		{return THEN;}
"else"		{return ELSE;}
"endif"		{return ENDIF;}
"while"     {return WHILE;}
"endwhile"  {return ENDWHILE;}  
"decl"		{return DECL;}
"enddecl"	{return ENDDECL;}
[=]         { return ASGN;}
[+]		{ return PLUS;}
[-]		{return MINUS;}
[*]		{return MUL;}
[/]		{return DIV;}
[<]		{return L;}
"<="	{return LE;}
"=="	{return EQ;}
">="	{return GE;}
[>]		{return G;}
"!="	{return NE;}
[a-z]+[a-z0-9]*    { printf("asf");yylval.character = malloc(sizeof(yytext));strcpy(yylval.character,yytext);return ID;}

[();\n]   {return *yytext;}
[ \t]      ;

%%

yyerror(char const *s)
{
	printf("yyerror %s",s);
}

